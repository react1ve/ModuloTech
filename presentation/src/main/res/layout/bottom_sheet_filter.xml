<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_rounded_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bold"
        android:text="@string/filter"
        android:textColor="@color/font"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:itemCount="4"
        tools:listitem="@layout/item_selectable_text" />

    <Button
        android:id="@+id/reset"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="@dimen/size_30dp"
        android:layout_weight="1"
        android:enabled="false"
        android:text="@string/reset"
        app:layout_constraintEnd_toStartOf="@id/apply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler" />

    <Button
        android:id="@+id/apply"
        style="@style/button"
        android:layout_width="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="@dimen/size_10dp"
        android:layout_weight="1"
        android:text="@string/apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reset"
        app:layout_constraintTop_toTopOf="@id/reset" />

</androidx.constraintlayout.widget.ConstraintLayout>
