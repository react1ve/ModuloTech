<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="@dimen/track_width" android:height="@dimen/thumb_height" />
                    <solid android:color="@color/switchCenter" />
                    <corners android:radius="@dimen/size_60dp" />
                    <stroke android:width="@dimen/size_2dp" android:color="@color/blue" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="@dimen/track_width" android:height="@dimen/thumb_height" />
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="@dimen/size_60dp" />
                    <stroke android:width="@dimen/size_2dp" android:color="@color/switchDisabled" />
                </shape>

            </item>
        </layer-list>
    </item>

</selector>
