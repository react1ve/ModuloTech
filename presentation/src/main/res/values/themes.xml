<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:autofilledHighlight" tools:ignore="NewApi">@color/transparent</item>
        <item name="android:ambientShadowAlpha">0.12</item>
        <item name="android:spotShadowAlpha">0</item>
    </style>

    <style name="AppTheme.NoStatusBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.NoStatusBar.NoAnimation">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>

    <!-- https://stackoverflow.com/a/46708018 -->
    <style name="AppTheme.Dialog.DatePicker" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.NoAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:textColorSecondary">@color/text_primary</item>
        <item name="android:actionMenuTextColor">@color/text_primary</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorPrimaryInverse">@color/text_primary_inverse</item>
        <item name="android:colorBackground">@color/text_primary_inverse</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

</resources>
