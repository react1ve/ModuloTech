<resources>

    <!-- COMMON IMAGE STYLE -->

    <!-- COMMON TEXT STYLES -->

    <style name="Text" parent="AppTheme">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- UNDERLINED TEXT -->

    <!-- FONT REGULAR TEXT -->

    <style name="Text.FontRegular">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Text.FontRegular.Primary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.FontRegular.Primary.DP14">
        <item name="android:textSize">@dimen/size_14dp</item>
    </style>

    <!-- FONT BOLD TEXT -->

    <style name="Text.FontBold">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.FontBold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.FontBold.Black.DP18">
        <item name="android:textSize">@dimen/size_18dp</item>
    </style>

    <!-- FONT MEDIUM TEXT -->

    <!-- FONT LIGHT TEXT -->

    <!-- MATERIAL EDIT TEXT -->

    <!-- BUTTONS -->


    <style name="imgStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@drawable/selectable_button_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_22dp</item>
        <item name="android:layout_marginEnd">@dimen/size_22dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
